<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.imperials.worldofpets.MainPage">

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorTrans"
        android:layout_marginTop="50dp"
        android:onClick="wiki"
        app:srcCompat="@drawable/petwiki"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Pet Wikipedia"
        android:layout_marginTop="8dp"
        android:onClick="wiki"
        android:layout_below="@+id/imageButton1"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:onClick="care"
        android:background="@color/colorTrans"
        app:srcCompat="@drawable/patcare"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/imageButton1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="20sp"
        android:text="Pet Care"
        android:onClick="care"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
